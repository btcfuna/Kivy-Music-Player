
MDNavigationLayout:
    ScreenManager:
        id: screen_manager
        Screen:
            id: MainScreen
            name: 'MainScreen'
            song_name: song_name
            MDBottomNavigation:
                elevation: 10

                MDBottomNavigationItem:
                    name: 'home'
                    text: 'Search'
                    icon: 'magnify'
                    MDIconButton:
                        icon: 'music'
                        pos_hint: {"center_x":0.5, "center_y":0.75}
                        theme_text_color: "Custom"
                        text_color: app.theme_cls.primary_color
                        user_font_size: "300sp"
                    MDIconButton:
                        icon: 'menu'
                        pos_hint: {"center_x":0.05, "center_y":0.95}
                        on_press: nav_drawer.set_state("open")
                    MDCard:
                        size_hint: None, None
                        pos_hint: {'center_x':0.5, 'center_y':0.5}
                        size_hint: 0.7,0.06
                        elevation: 8
                        radius: [10,]
                        border_radius: 10
                    MDTextFieldRound:
                        id: song_name
                        hint_text: "Songs, artists or podcasts"
                        helper_text: "Enter song name here"
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        size_hint: 0.6, 0.05
                        line_color: app.theme_cls.bg_light
                        normal_color: app.theme_cls.bg_light
                        color_active: app.theme_cls.bg_light
                        foreground_color: app.theme_cls.secondary_text_color
                        helper_text_mode: "on_focus"
                        icon_left: "magnify"
                        icon_left_color: app.theme_cls.text_color if self.text == '' else app.theme_cls.primary_color
                            

                    MDCard:
                        size_hint: None, None
                        pos_hint: {'center_x':0.5, 'center_y':0.4}
                        size : search_btn.size
                        elevation: 10
                        radius:[3,]
                        border_radius:3
                        MDRaisedButton:
                            id: search_btn
                            text: 'SEARCH'
                            pos_hint: {'center_x':0.5, 'center_y':0.5}
                            md_bg_color: app.theme_cls.primary_color 
                            text_color: (1,1,1,1)
                            on_press:
                                app.show_data(song_name.text)
                MDBottomNavigationItem:
                    name: 'trending'
                    text: 'Trending'
                    icon: 'trending-up'
                    on_tab_press: app.add_trend()
                    MDSwiper:
                        id: trend_grid
                    

                    
                MDBottomNavigationItem:
                    name: 'top'
                    text: 'Top 200'
                    icon: 'chart-line'
                    on_tab_press: app.add_top()
                    MDTabs:
                        Tab:
                            text: 'Local'
                            ScrollView:
                                MDList:
                                    id: top_list
                        Tab:
                            text: 'Global'
                            ScrollView:
                                MDList:
                                    id: top_global_list

        Screen:
            id: SongListScreen
            name: 'SongListScreen'
            BoxLayout:
                orientation: 'vertical'

                MDToolbar:
                    title: 'Results'
                    elevation: 10
                    left_action_items: [['chevron-left', lambda x: app.change_screen('MainScreen', 'right')]]

                ScrollView:
                    size_hint: (1, 2.5)
                    MDList:
                        id: container
                
                Widget:
        
        Screen:
            id: SongDetailsScreen
            name: 'SongDetailsScreen'
            BoxLayout:
                id: detailsbox
                orientation: 'vertical'

        Screen:
            id: DownloadsScreen
            name: 'DownloadsScreen'
            BoxLayout:
                orientation: 'vertical'
                MDToolbar:
                    title: 'Downloads'
                    elevation: 10
                    left_action_items: [['chevron-left', lambda x: app.change_screen('MainScreen', 'right')]]

                ScrollView:
                    size_hint: (1, 2.5)
                    MDList:
                        id: downloadlist
        Screen:
            id: PlayScreen
            name: 'PlayScreen'
            BoxLayout:
                orientation: 'vertical'

        Screen:
            id: AboutScreen
            name: 'AboutScreen'
            
            BoxLayout:
                orientation: 'vertical'
                size_hint: 1, 0.5
                pos_hint: {'center_x': 0.5, 'center_y': 0.75}

                MDToolbar:
                    elevation: 10
                    title: 'About'
                    left_action_items: [['chevron-left', lambda x: app.change_screen('MainScreen', 'right')]]

                Image:
                    source: './made-black.png' if app.theme_cls.theme_style == "Light" else './made-white.png'

                MDCard:
                    size_hint: None, None
                    pos_hint: {'center_x':0.5, 'center_y':0.4}
                    size : contact_btn.size
                    elevation: 5
                    MDRectangleFlatButton:
                        id: contact_btn
                        text: 'Contact'
                        pos_hint: {'center_x':0.5, 'center_y':0.5}
                        text_color: app.theme_cls.primary_color
                        on_press:
                            app.contact_us()

        Screen:
            id: SettingsScreen
            name: 'SettingsScreen'
            
            BoxLayout:
                orientation: 'vertical'
                size_hint: 1, 0.5
                pos_hint: {'center_x': 0.5, 'center_y': 0.75}

                MDToolbar:
                    elevation: 10
                    title: 'Settings'
                    left_action_items: [['chevron-left', lambda x: app.change_screen('MainScreen', 'right')]]
                    
                FloatLayout:
                    MDLabel:
                        text: "Dark Mode"
                        padding_x: "30dp"
                        theme_text_color: 'Primary'
                        pos_hint: {'center_y': .9}
                    MDSwitch:
                        id: dark_mode_switch
                        active: False
                        pos_hint: {'center_x': 0.9, 'center_y': .9}
                        on_active: app.change_theme()
                
                    MDLabel:
                        text: "Current version"
                        padding_x: "30dp"
                        theme_text_color: 'Primary'
                        pos_hint: {'center_y': 0.5}
                    MDLabel:
                        text: "beta 0.6"
                        padding_x: "30dp"
                        theme_text_color: 'Secondary'
                        halign: 'right'
                        pos_hint: {'center_y': 0.5}
                    MDLabel:
                        text: "Download location"
                        padding_x: "30dp"
                        theme_text_color: 'Primary'
                        pos_hint: {'center_y': 0.7}
                    MDTextButton:
                        text: app.path
                        padding_x: "30dp"
                        custom_color: app.theme_cls.secondary_text_color
                        pos_hint: {'center_x':0.9, 'center_y': 0.7}
                        on_press: app.file_manager_open()


    MDNavigationDrawer:
        id: nav_drawer
        BoxLayout:
            orientation: 'vertical'
            padding: ("10dp","20dp")
            spacing: "8dp"
            
            AnchorLayout:
                anchor_x: "left"
                padding: "20dp"
                size_hint_y: None
                height: avatar.height

                Image:
                    id: avatar
                    size_hint: None, None
                    size: "56dp", "56dp"
                    source: "icon-black.png"

            MDLabel:
                text: "Black Hole"
                padding_x: "20dp"
                font_style: "Button"
                size_hint_y: None
                height: self.texture_size[1]
                theme_text_color: 'Primary'

            MDLabel:
                text: "blackholeyoucantescape@gmail.com"
                padding_x: "20dp"
                font_style: "Caption"
                size_hint_y: None
                height: self.texture_size[1]
                theme_text_color: 'Secondary'

            ScrollView:
                MDList:
                    id: nav_list
                    OneLineIconListItem:
                        text: 'Home'
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        theme_text_color: "Custom"
                        text_color: app.theme_cls.primary_color if screen_manager.current == 'MainScreen' else app.theme_cls.text_color
                        on_release:
                            nav_drawer.set_state("close")
                            app.change_screen('MainScreen', 'right')
                        IconLeftWidget:
                            icon: 'home-outline'
                            theme_text_color: "Custom"
                            text_color: app.theme_cls.primary_color if screen_manager.current == 'MainScreen' else app.theme_cls.text_color
                            on_release:
                                nav_drawer.set_state("close")
                                app.change_screen('MainScreen', 'right')
                        
                        
                    OneLineIconListItem:
                        text: 'Downloads'
                        theme_text_color: "Custom"
                        text_color: app.theme_cls.primary_color if screen_manager.current == 'DownloadsScreen' else app.theme_cls.text_color
                        on_release:
                            app.download_list()
                            nav_drawer.set_state("close")
                            app.change_screen('DownloadsScreen', 'left')
                        IconLeftWidget:
                            icon: 'folder-outline'
                            theme_text_color: "Custom"
                            text_color: app.theme_cls.primary_color if screen_manager.current == 'DownloadsScreen' else app.theme_cls.text_color
                            on_release:
                                app.download_list()
                                nav_drawer.set_state("close")
                                app.change_screen('DownloadsScreen', 'left')
                    
                    OneLineIconListItem:
                        text: 'Settings'
                        theme_text_color: "Custom"
                        text_color: app.theme_cls.primary_color if screen_manager.current == 'SettingsScreen' else app.theme_cls.text_color
                        on_release:
                            nav_drawer.set_state("close")
                            app.change_screen('SettingsScreen', 'left')
                        IconLeftWidget:
                            icon: 'cogs'
                            theme_text_color: "Custom"
                            text_color: app.theme_cls.primary_color if screen_manager.current == 'SettingsScreen' else app.theme_cls.text_color
                            on_release:
                                nav_drawer.set_state("close")
                                app.change_screen('SettingsScreen', 'left')

                    OneLineIconListItem:
                        text: 'About'
                        theme_text_color: "Custom"
                        text_color: app.theme_cls.primary_color if screen_manager.current == 'AboutScreen' else app.theme_cls.text_color
                        on_release:
                            nav_drawer.set_state("close")
                            app.change_screen('AboutScreen', 'left')
                        IconLeftWidget:
                            icon: 'information-outline'
                            theme_text_color: "Custom"
                            text_color: app.theme_cls.primary_color if screen_manager.current == 'AboutScreen' else app.theme_cls.text_color
                            on_release:
                                nav_drawer.set_state("close")
                                app.change_screen('AboutScreen', 'left')    

<Tab>:
    id: label